<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="icon" format="reference"/>
    <attr name="titleText" format="string"/>
    <attr name="descriptionText" format="string"/>
    <attr name="toggleOn" format="boolean"/>

    <declare-styleable name="SearchWidget">
        <attr name="style" format="enum">
            <enum name="round" value="0"/>
            <enum name="rectangle" value="1"/>
            <enum name="rounded_rectangle" value="2"/>
        </attr>
        <attr name="roundedRectangleCornerRadius" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ToggleCell">
        <attr name="titleText"/>
        <attr name="descriptionText"/>
        <attr name="toggleOn"/>
    </declare-styleable>

    <declare-styleable name="RadioButtonCell">
        <attr name="icon"/>
        <attr name="titleText"/>
        <attr name="descriptionText"/>
        <attr name="isChecked"/>
    </declare-styleable>

</resources>